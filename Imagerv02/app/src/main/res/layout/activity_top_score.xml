<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondotop"
    tools:context=".TopScore">


    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="135dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="209dp"
        android:layout_marginRight="22dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="125dp"
            android:layout_height="89dp"
            android:layout_gravity="center"
            android:layout_marginTop="21dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_jugador1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:text="Jugador 1"
                android:textColor="#000"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/tv_score1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="Jugador 1"
                android:textColor="#000"
                android:textSize="8dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="123dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_jugador2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Jugador 1"
                android:textColor="#000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_score2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Jugador 1"
                android:textColor="#000"
                android:textSize="10dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:orientation="vertical"
            android:textColor="#000">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="59dp"

                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_jugador3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Jugador 1"
                    android:textColor="#000"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/tv_score3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_horizontal"
                    android:text="Jugador 1"
                    android:textColor="#000"
                    android:textSize="7dp" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:id="@+id/mgs"
            android:layout_width="220dp"
            android:layout_height="58dp"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:text="El mensaje que recibirÃ¡ el jugador"
            android:textColor="#fff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/BTN_goMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu"/>
    </LinearLayout>


</LinearLayout>