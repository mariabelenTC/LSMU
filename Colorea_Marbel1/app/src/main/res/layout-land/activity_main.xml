<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_gravity="center_vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="5dp" >

        <TextView
            android:id="@+id/countdown_text"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="04:00"
            android:layout_gravity="center"
            android:background="#450852"
            android:textAlignment="center"
            android:textColor="#FFFF"
            android:textSize="30dp" />

        <Button
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="#A152AA"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:text="start"
            android:textSize="20dp" />

        <Button
            android:id="@+id/restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="#A152AA"
            android:textColor="#FFFFFF"
            android:text="reset"
            android:textSize="20dp" />

        <Button
            android:id="@+id/help"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="help"
            android:textColor="#FFFF"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:background="#7316A2" />

        <Button

            android:id="@+id/muestra_color"
            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Tu color" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="575dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            app:srcCompat="@drawable/mario_final5finalfinal" />


        <LinearLayout
            android:id="@+id/botonera"
            android:layout_width="match_parent"
            android:layout_height="327dp"
            android:background="#efccf9"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/finish"
                android:layout_width="104dp"
                android:layout_height="69dp"
                android:layout_gravity="center_vertical"
                android:background="#A152AA"
                android:text="finish"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#9A3EB0"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/GreenSeekBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#9ccc65"
                android:rotation="270"
                android:max="255"
                android:thumbTint="#212121" />


        </LinearLayout>




    </LinearLayout>






</LinearLayout>